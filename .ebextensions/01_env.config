files:
  # According to the documentation in the nginx.conf file on the ElasticBeanstalk servers:
  # "Modifications of nginx.conf can be performed using container_commands to modify the staged version
  # located in /tmp/deployment/config/etc#nginx#nginx.conf"
  # The modifications need to be made to the copy in the tmp directory so changes
  # don't get overwritten as part of the EB deployment cycle.
  "/tmp/deployment/config/etc#nginx#nginx.conf":
    mode: "000755"
    owner: root
    group: root
    content: |
      user  nginx;
      worker_processes  1;
      error_log  /var/log/nginx/error.log;
      pid        /var/run/nginx.pid;
      events {
        worker_connections  1024;
      }

      http {
        upstream nodejs {
          server 127.0.0.1:8081;
          keepalive 256;
        }

        server {
          listen 8080;

          location / {
            proxy_pass  http://nodejs;
            proxy_set_header   Connection "";
            proxy_http_version 1.1;
            proxy_set_header        Host            $host;
            proxy_set_header        X-Real-IP       $remote_addr;
            proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;

            location /deployments {
              access_log off;
              proxy_cache 4front_deployment_assets;
              add_header X-Proxy-Cache $upstream_cache_status;
            }
          }

          gzip on;
        }

        client_max_body_size 5M;

        proxy_intercept_errors on;
        # error_page 503 @503;
        # error_page 502 =503 @503;

        # http://stackoverflow.com/questions/5031818/show-a-custom-503-page-if-upstream-is-down
        error_page 502 503 /var/app/current/503.html;

        port_in_redirect off;
        include       /etc/nginx/mime.types;
        default_type  application/octet-stream;

        log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                          '$status $body_bytes_sent "$http_referer" '
                          '"$http_user_agent" "$http_x_forwarded_for"';

        access_log  /var/log/nginx/access.log  main;
        sendfile        on;
        keepalive_timeout  65;
      }
